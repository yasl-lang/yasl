

fn match_float(n) {
    match n {
        -1.5 {
            return 'negative one point five'
        }
        0.2 {
            return 'zero point two'
        }
        1.7 {
            return 'one point seven'
        }
        2.3 {
            return 'two point three'
        }
        +3.1 {
            return 'three point one'
        }
        2.0 {
            return 'two point zero'
        }
        1.0 {
            return 'one point zero'
        }
        0.0 {
            return 'zero point zero'
        }
        * {
            return '???'
        }
    }
}

for i <- [ 0, 1, 2, 3.1, 2.3, 1.7, -1.5, 0.2 ] {
    echo match_float(i)
}

